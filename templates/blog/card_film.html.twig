<div class="col-md-4 col-lg-3">
    <div class="card" style="width: 250px; height: 700px;">
        {% if film.image %}
            <img src="{{ asset(film.image) }}" class="card-img-top" alt="...">
        {% endif %}
        <div class="card-body">
            <h5 class="card-title">{{ film.titre }}</h5>
            <div class="small">Date de sortie : {{ film.dateDeSortie|date('d/m/Y') }}</div>
            <div class="small">{{ film.vus }} Vues</div>
            <div class="small">Note : {{ film.notefilm }} / 5</div>
            <div class="small">Prix : {{ film.prix }} â‚¬</div></br>
            <p class="card-text">{{ film.description|slice(0,80) }}</p>
            <a href="{{ path('film', { id: film.id }) }}" class="btn btn-primary">Voir</a></br>
            

            {% if is_granted(constant('App\\Security\\Voter\\FilmVoter::UPDATE'), film) %}
                <a href="{{ path('nouveau_film', { id: film.id }) }}" class="btn btn-outline-info">Modifier</a>
            {% endif %}
        </div>
    </div>
</div>
