{% extends 'base.html.twig' %}

{% block title %}Nous contacter !{% endblock %}

{% block body %}

    <h1>Contactez-nous maintenant</h1>
    <p>Nous répondons 24h/24</p>

    <form class="mt-4" method="POST">
        <div class="form-group">
            <label for="email">Votre adresse email</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="sujet">Votre adresse email</label>
            <input type="text" name="sujet" class="form-control" id="sujet" placeholder="Disfonctionnement catégories">
        </div>
        <div class="form-group">
            <label for="message">Votre message</label>
            <textarea class="form-control" name="message" id="message" rows="10"></textarea>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
    </form>

{% endblock %}
