{#{{ dump(app) }}#}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('accueil') }}">
        <img src="{{ asset('images/webflix.png') }}" alt="logo" width="150px">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item {{ ROUTE_NAME == 'accueil' ? 'active' }}">
                <a class="nav-link" href="{{ path('accueil') }}">Accueil <span class="sr-only">(current)</span></a>
            </li>        
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Films
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {% for genre in genres %}
                        <a class="dropdown-item" href="{{ path('blog', { id: genre.id }) }}">{{ genre.genre }}</a>
                    {% endfor %}
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('blog') }}">Tous les films</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ ROUTE_NAME == 'contact' ? 'active' }}" href="{{ path('contact') }}">Contact <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ ROUTE_NAME == 'apropos' ? 'active' }}" href="{{ path('apropos') }}">À propos</a>
            </li>
        </ul>
    </div>
    <div>
        <ul class="navbar-nav mr-auto">
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('account_redirect') }}">Mon compte</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
